---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
// import AccountHeaderWidget from './AccountHeaderWidget.astro';
import {Image} from "astro:assets";
import logo from "../assets/images/BigfootDSLogo_512.png";
---

<header>
	<nav>
		<div class="site-title">
			<a href="/">
				<Image loading={"eager"} class="headerLogo" alt="BigfootDS logo" src={logo} />
				<h2>
					{SITE_TITLE}
				</h2>
			</a>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/news">News</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>

		</div>
		<!-- <AccountHeaderWidget /> -->
	</nav>
</header>
<style>
	header {
		nav {
			
			div {
				display: flex;
				justify-content: center;
				align-items: center;

				
			}

			.site-title {
				a {
					width: 100%;
					height: 100%;
					display: flex;
					justify-content: center;
					align-items: center;
				}

				.headerLogo {
					max-height: 5vh;
					max-width: 5vh;
				}
			}

			.internal-links {
				width: 33%;
			}
		}
	}

	header {
		margin: 0;
		padding: 0 1em;
		background: light-dark(white, var(--theme-950));
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		z-index: 1;
		top: 0;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	.internal-links {
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		width: 50%;
		justify-content: space-between;
		justify-items: stretch;
		align-items: center;

		a {
			width: 20%;
			text-align: center;
		}
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;


	}
	nav a {
		padding: 1em 0.5em;
		color: light-dark(var(--theme-950), var(--theme-100));
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: light-dark(var(--theme-950), var(--theme-100));
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		header {
			nav {

				.headerLogo {
					max-height: auto;
				}

				.site-title {
					/* width: 20%; */
					a {
						padding: 0;
						h2 {
							display: none;
						}
						flex-wrap: wrap;
					}
				}
				.account-header-widget {
					width: 20%;
				}

				.social-links {
					display: none;
				}

				width: 100%;
				padding: 0;

				div {
					flex-direction: column;
					
				}

				.internal-links {
					display: flex;
					flex-wrap: wrap;
					flex-direction: row;
					width: auto;
					justify-content: space-evenly;
					a {
						width: 45%;
						padding: 0.1em;
					}
				}
			}
			
		}
	}
</style>